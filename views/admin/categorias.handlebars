<h2>Listas de Categorias</h2>

<hr>
<a href="/admin/categorias/add"><button class="btn btn-success mb-3" >Nova Categoria</button></a>


{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>URL: {{slug}}</small><br>
            <small>Data de criação: {{date}}</small><br><br>
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-dark">Editar Categoria</button></a>
            
            <form action="/admin/categorias/deletar/{{_id}}" method="post">
                <input type="hidden" name="id" id="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Apagar Categoria</button>
            </form>
        </div>
    </div>
{{else}}
    <h4 class="mt-3">Nenhuma categoria registrada</h4>
{{/each}}
