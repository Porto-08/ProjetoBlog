{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<h2>Edição Postagem</h2>

<div class="card">

    <div class="card-body">
        <form action="/admin/postagens/edit" method="POST">
            <input type="hidden" value="{{postagem._id}}" name="id">
            
            <label for="titulo" class="h6">Informe o novo Titulo: </label>
            <input type="text" name="titulo" class="form-control" value="{{postagem.titulo}}" required>

            <label for="categoria" class="h6">Qual a nova Categoria do Post? </label>
            <select name="categoria" id="" class="form-control" required>
                <option value="0">Escolha</option>
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma Categoria Registrada.</option>
                {{/each}}
            </select>

            <label for="descricao" class="h6">Dê uma pequena descrição: </label>
            <input type="text" name="descricao" class="form-control" value="{{postagem.descricao}}" required>

            <label for="conteudo" class="h6">Novo Conteúdo do Post: </label>
            <textarea name="conteudo" id="" cols="" rows="" class="form-control" required>
                    {{postagem.conteudo}}
            </textarea>

            <label for="slug" class="h6">Informe o novo Slug: </label>
            <input type="text" name="slug" class="form-control" value="{{postagem.slug}}" required>

            <button class="btn btn-success mt-2">Editar Postagem</button>
        </form>
    </div>

</div>