{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<h2>Cadastro de Nova Postagem</h2>

<div class="card">

    <div class="card-body">
        <form action="/admin/postagens/nova" method="POST">
            <label for="titulo" class="h6">Informe o Titulo: </label>
            <input type="text" name="titulo" class="form-control" required>

            <label for="categoria" class="h6">Qual a Categoria do Post? </label>
            <select name="categoria" id="" class="form-control" required>
                <option value="0">Escolha</option>
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma Categoria Registrada.</option>
                {{/each}}
            </select>

            <label for="descricao" class="h6">Dê uma pequena descrição: </label>
            <input type="text" name="descricao" class="form-control" required>

            <label for="conteudo" class="h6">Conteúdo do Post: </label>
            <textarea name="conteudo" id="" cols="" rows="" class="form-control" required>
                
            </textarea>

            <label for="slug" class="h6">Informe o Slug: </label>
            <input type="text" name="slug" class="form-control" required>

            <button class="btn btn-success mt-2"> Criar Nova Postagem</button>
        </form>
    </div>

</div>